<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunlightApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gold</item>
        <item name="colorPrimaryVariant">@color/bright_yellow</item> <!-- buttons colour -->
        <item name="colorOnPrimary">@color/dark_dark_grey</item> <!-- buttons text colour-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bright_yellow</item> <!-- titles and buttons colour-->
        <item name="colorSecondaryVariant">@color/bright_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/light_beige</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item> <!-- Status bar color. -->
    </style>
</resources>