<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunlightApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gold</item>
        <item name="colorPrimaryVariant">@color/brown</item> <!-- titles and buttons colour-->
        <item name="colorOnPrimary">@color/light_beige</item> <!-- background-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gold</item>  <!-- switch colour, EditText underline colour -->
        <item name="colorSecondaryVariant">@color/dark_brown</item>
        <item name="colorOnSecondary">@color/cream</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> <!-- Status bar color. -->
        <item name="android:textColor">@color/dark_brown</item>
    </style>
</resources>